<div class="">
    <div class="row">
        <div class="col-md-4">
            {{#view Concertember.DropTarget}}

                <div class="panel panel-primary">
                    <div class="panel-heading">Muss ich hin!</div>
                    <div class="panel-body">

                        {{#each concert in loveConcerts}}

                            <div>

                                {{#view Concertember.Box}}
                                    <div class="col-md-12 btn btn-xs" style="cursor: pointer;">

                                        <div {{bind-attr class="concert.alertClass :col-md-10 :col-lg-10 :col-sm-10 :btn :btn-xs"}}>
                                            {{concert.artist}}
                                            -
                                            {{concert.venue}} -
                                            {{formatDate concert.date}}
                                        </div>

                                        <div class="col-md-2 col-lg-2 col-sm-2">

                                            <button {{action 'removeConcert' concert}}
                                                    class="btn btn-xs btn-danger glyphicon glyphicon-remove"
                                                    ></button>
                                        </div>


                                    </div>
                                {{/view}}
                            </div>



                        {{/each}}


                    </div>
                </div>
            {{/view}}
        </div>
        <div class="col-md-4">
            {{#view Concertember.DropTarget}}
                <div class="panel panel-warning" data-drop="true" ng-model='allConcerts' jqyoui-droppable>
                    <div class="panel-heading">Alle Konzerte</div>
                    <div class="panel-body">
                        {{#each concert in allConcerts}}

                            <div>
                                {{#view Concertember.Box}}

                                    <div class="col-md-12 btn btn-xs" style="cursor: pointer;">
                                        <div {{bind-attr class="concert.alertClass :col-md-10 :col-lg-10 :col-sm-10 :btn :btn-xs"}}>
                                            {{concert.artist}}
                                            -
                                            {{concert.venue}} -
                                            {{formatDate concert.date}}
                                        </div>

                                        <div class="col-md-2 col-lg-2 col-sm-2">
                                            <button {{action 'removeConcert'  concert}}
                                                    class="btn btn-xs btn-danger glyphicon glyphicon-remove"
                                                    ></button>

                                        </div>
                                    </div>
                                {{/view}}



                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/view}}
        </div>
        <div class="col-md-4">

            {{#view Concertember.DropTarget}}
                <div class="panel panel-success">

                    <div class="panel-heading">Mal schauen!</div>
                    <div class="panel-body">
                        {{#each concert in maybeConcerts}}
                            <div>
                                {{#view Concertember.Box}}
                                    <div class="col-md-12 btn btn-xs" style="cursor: pointer;">
                                        <div {{bind-attr class="concert.alertClass :col-md-10 :col-lg-10 :col-sm-10 :btn :btn-xs"}}
                                                >
                                            {{concert.artist}}
                                            -
                                            {{concert.venue}} -
                                            {{formatDate concert.date}}
                                        </div>

                                        <div class="col-md-2 col-lg-2 col-sm-2">
                                            <button {{action 'removeConcert'  concert}}
                                                    class="btn btn-xs btn-danger glyphicon glyphicon-remove"
                                                    ></button>
                                        </div>
                                    </div>
                                {{/view}}
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/view}}
        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-9">
        <form name="addConcertForm" novalidate class="form-inline" role="form">
            <div class="form-group">
                <label class="sr-only">Artist</label>
                {{input value=newConcert.artist placeholder="KÃ¼nstler"}}
            </div>
            <div class="form-group">
                <label class="sr-only">Ort</label>
                {{input value=newConcert.venue placeholder="Ort"}}
            </div>
            <div class="form-group">
                <label class="sr-only">Datum</label>
                {{input value=newConcert.dateString placeholder="Datum (TT.MM.JJJJ)"}}
            </div>

            <button {{action 'addConcert'}} class="btn btn-success glyphicon glyphicon-plus"
                                            type="submit"></button>
        </form>
    </div>

</div>

